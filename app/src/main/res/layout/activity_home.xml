                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="70dp"
                                    android:src="@drawable/person_icon" />

                                <TextView
                                    android:layout_width="111dp"
                                    android:layout_height="38dp"
                                    android:text="abcd"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
